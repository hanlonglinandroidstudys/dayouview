<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:entries="@array/spinner_entries"/>


    <com.example.myapplication.views.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:hint="hahahaha"
        android:padding="3dp"/>
    <Button
        android:id="@+id/btn_goto_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="web测试"/>

    <!--切换视图-->
    <RadioGroup
        android:id="@+id/ra_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ra_ac1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:button="@null"
            android:gravity="center"
            android:text="activity1"/>
        <RadioButton
            android:id="@+id/ra_ac2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:button="@null"
            android:gravity="center"
            android:text="activity2"/>
        <RadioButton
            android:id="@+id/ra_ac3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:button="@null"
            android:gravity="center"
            android:text="activity3"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/frlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>



</LinearLayout>